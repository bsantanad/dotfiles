syntax on

set autoindent
set colorcolumn=80
set expandtab " make tab spaces
set fileformat=unix
set hlsearch
set incsearch
set nobackup
set noswapfile
set nowrap
set nu " numbers
set undodir=~/.vim/undodir
set undofile
set shiftwidth=4  " amount of whitespaces for one level of indentation
set spell " spelling
set tabstop=4 " width (in chars) of tab
set wildmenu " cmdline completion
